        <Button
            style="@style/GridButtonFilled"
            android:layout_width="110dp"
            android:layout_height="111dp"
            android:layout_row="2"
            android:layout_column="0" />
        <Button
            android:id="@+id/button7"
            style="@style/GridButtonFilled"
            android:layout_width="110dp"
            android:layout_height="111dp"
            android:layout_row="2"
            android:layout_column="0" />


